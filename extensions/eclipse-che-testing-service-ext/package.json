{
  "name": "@eclipse-che/testing-service-ext",
  "version": "0.0.1",
  "description": "Theia - TestService Extension",
  "dependencies": {
    "@theia/plugin": "^0.12.0",
    "@theia/plugin-ext": "^0.12.0",
    "@eclipse-che/testing-service": "^0.0.1",
    "glob": "^7.1.6",
    "mocha": "^6.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "theiaExtensions": [
    {
      "backend": "lib/testservice-ext-backend-module",
      "frontend": "lib/testservice-ext-frontend-module"
    }
  ],
  "keywords": [
    "theia-extension"
  ],
  "license": "EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prepare": "yarn clean && yarn build",
    "clean": "rimraf lib",
    "format": "tsfmt -r --useTsfmt ../../configs/tsfmt.json",
    "lint": "tslint -c ../../configs/tslint.json --project tsconfig.json",
    "compile": "tsc",
    "build": "concurrently -n \"format,lint,compile\" -c \"red,green,blue\" \"yarn format\" \"yarn lint\" \"yarn compile\" && yarn run compileWorker",
    "compileWorker": "webpack-cli --config webpack.config.js",
    "watch": "tsc -w"
  }
}
